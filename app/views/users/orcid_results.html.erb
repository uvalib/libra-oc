
<div class="row">
  <div class="col-sm-3 col-sm-offset-5 ">
    <p class="text-muted pull-right"><%= @page + 1 %> of <%= @total_pages + 1 %></p>

  </div>
  <div class="col-sm-4">
    <p>
    <%= link_to "Previous", orcid_search_path(page: @prev_page, q: @q), class: 'orcid-pager btn btn-primary' if @prev_page %>
    <%= link_to "Next", orcid_search_path(page: @next_page, q: @q), class: 'orcid-pager btn btn-primary' if @next_page %>
    </p>
  </div>
</div>

<div class="row">
  <div class='col-xs-12'>
    <table class="table table-hover">
      <tbody>
      <% @orcid_profiles.each do |p| %>
        <tr data-toggle="popover"
                    data-content="<%= orcid_details p %>"
                    data-html="true"
                    data-trigger="hover"
                    data-placement="top"
                    >

          <td><b><%= "#{p['first_name']} #{p['last_name']}" %></b></td>

          <td><button class="btn btn-default btn-sm select-orcid"
                      data-orcid-id='<%= p['orcid'] %>'
                      data-orcid-name='<%= "#{p['first_name']} #{p['last_name']}" %>' >
                      Select
            </button>
          </td>

        </tr>
      <%end%>
      </tbody>
    </table>
  </div>
</div>
