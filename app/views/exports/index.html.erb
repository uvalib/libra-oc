<table class="exports table table-striped table-bordered">

  <thead>
  <tr>
    <th>Work Export</th>
    <th>Start Date (defaults to 2000-01-01)</th>
    <th>End Date (defaults to today)</th>
    <th>Select Work Type</th>
  </tr>
  </thead>

  <tbody>
  <tr>
    <td>
    </td>
    <td>
      <input id="export-start-date" type="text" placeholder="YYYY-MM-DD" class="date-picker" />
    </td>
    <td>
      <input id="export-end-date" type="text" placeholder="YYYY-MM-DD" class="date-picker" />
    </td>
    <td>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
          <span data-search-element="label">Export</span>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to 'All Works', '#', { :class => 'exporter', :data => 'all' } %></li>
          <li><%= link_to 'Public Works', '#', { :class => 'exporter', :data => 'public' } %></li>
          <li><%= link_to 'UVa Only Works', '#', { :class => 'exporter', :data => 'uva' } %></li>
          <li><%= link_to 'Embargoed Works', '#', { :class => 'exporter', :data => 'embargo' } %></li>
          <li><%= link_to 'Private Works', '#', { :class => 'exporter', :data => 'private' } %></li>
        </ul>
      </div>
    </td>
  </tr>
  </tbody>

</table>