<div class="form-group multi_value required libra_work_rights managed">
  <%= f.label :authors_attributes, "Authors", class: 'multi_value' %>
    <ul class="listing" aria-live="polite">
      <li class="field-wrapper input-group input-append">
        <%= f.fields_for :authors_attributes do |af| %>
          <div class="row">
            <div class="col-sm-6">
              <%= af.input :first_name, input_html: {class: 'form-control'}, required: true %>
            </div>
            <div class="col-sm-6">
              <%= af.input :last_name, input_html: {class: 'form-control'}, required: true %>
            </div>
          </div>
      </li>
    </ul>
  <%end%>
  <button type="button" class="btn btn-link add"><span class="glyphicon glyphicon-plus"></span><span class="controls-add-text">Add another Author</span></button>

</div>



