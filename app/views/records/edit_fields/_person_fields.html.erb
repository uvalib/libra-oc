<div class="form-group multi_value required libra_work_rights managed">
  <%= f.label "#{name}_attributes", name.titleize, class: 'multi_value' %>

    <ul class="listing" aria-live="polite">
        <li class="field-wrapper input-group input-append">
          <%= f.simple_fields_for name do |af| %>
            <div class="row form-group">
              <div class="col-sm-6">
                <%= af.input :computing_id, label: "Computing ID", input_html: {class: 'form-control'}, required: false  %>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-6">
                <%= af.input :first_name, input_html: {class: 'form-control'}, required: false %>
              </div>
              <div class="col-sm-6">
                <%= af.input :last_name, input_html: {class: 'form-control'}, required: false %>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-6">
                <%= af.input :department, input_html: {class: 'form-control'}, required: false %>
              </div>
              <div class="col-sm-6">
                <%= af.input :institution, input_html: {class: 'form-control'}, required: false %>
              </div>
            </div>
            <div class="row form-group">
            </div>
            <hr />
          <%end%>
        </li>
    </ul>
    <button type="button" class="btn btn-link add"><span class="glyphicon glyphicon-plus"></span><span class="controls-add-text">Add another <%= name.singularize.titleize %></span></button>

</div>
