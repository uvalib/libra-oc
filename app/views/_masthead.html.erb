<div id="uva_lib_banner">
  <div id="container1" class="lib_banner">
    <%# render partial: '/user_util_links' %>
    <a href="http://www.library.virginia.edu/askalibrarian/" class="ask-a-librarian"><i class="fa fa-question-circle"></i> Ask a Librarian</a>
    <div id="uva_lib_logo" class="grid_14 alpha">
      <%= link_to "http://library.virginia.edu/" do %>
        <%= image_tag "uva-horizontal-logo.svg", alt: "University of Virginia Library" %>
      <% end %>
    </div>
  </div>
</div>

<nav class="navbar navbar-default container-fluid">
  <div class="navbar-wapper">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand">
        <%= image_tag "LibraOpenBlue.svg", alt: "LIBRA Logo"  %>
      </div>
      <span class="search-scope">Online Archive of University of Virginia Scholarship</span>
    </div>
    <% if @hide_user_controls.nil? %>
      <div id="navbar" class="navbar-collapse collapse navbar-right">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <% if current_user.admin? %>
               <li class="admin-button">

                  <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                      <span data-search-element="label">Admin</span>
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Audit', '/audits' %></li>
                      <li><%= link_to 'Export', '/exports' %></li>
                    </ul>
                  </div>

               </li>
            <% end %>
            <li>
              <%= link_to "Dashboard", sufia.dashboard_index_path %>
            </li>
            <li>
              <%= link_to current_user.name, sufia.profile_path(current_user) %>
            </li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    <% end %>
  </div>
</nav>
