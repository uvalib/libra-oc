<div id="uva_lib_banner">
	<div id="container1" class="lib_banner">
		<%= render partial: '/user_util_links' %>
		<a href="http://www.library.virginia.edu/askalibrarian/" class="ask-a-librarian"><i class="fa fa-question-circle"></i> Ask a Librarian</a>
		<div id="uva_lib_logo" class="grid_14 alpha">
			<%= link_to "http://library.virginia.edu/" do %>
			   <%= image_tag "uva-horizontal-logo.svg", alt: "University of Virginia Library" %>
			<% end %>
		</div>
	</div>
</div>

<nav class="navbar navbar-default navbar-static-top">
  <div class="navbar-wapper">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
			<%= link_to main_app.root_path, :class => "navbar-brand" do %>
				 <%= image_tag "libra-logo.svg", alt: "LIBRA Logo"  %>
			<% end %>
		<span class="search-scope">Online Archive of University of Virginia Scholarship</span>
    </div>
	  <% if @hide_user_controls.nil? %>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<li>
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %></a>
	        </li>
				<% else %>
			    <li>
			      <%= link_to main_app.new_user_session_path do %>
			         Sign in
			      <% end %>
			    </li>
			  <% end %>
      </ul>
    </div><!--/.nav-collapse -->
	  <% end %>
  </div>
</nav>
